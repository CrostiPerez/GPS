<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="itemTextColor">@color/cardview_dark_background</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorTexto</item>
        <item name="colorControlNormal">@color/colorTexto</item>
        <item name="android:textColorSecondary">@color/black</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#FF8000</item>
        </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#FF0000</item>
        <item name="colorButtonNormal">#FF8000</item>
        <item name="itemTextColor">#FFFFFF</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="itemTextColor">@color/cardview_dark_background</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorTexto</item>
        <item name="colorControlNormal">@color/colorTexto</item>
    </style>
</resources>
